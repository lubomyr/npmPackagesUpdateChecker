{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    //"verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "files": ["globals.d.ts"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
